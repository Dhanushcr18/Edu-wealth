// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String?  @map("password_hash")
  googleId      String?  @unique @map("google_id")
  name          String?
  budgetAmount  Decimal? @map("budget_amount") @db.Decimal(10, 2)
  currency      String   @default("INR") @db.VarChar(5)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  interests     UserInterest[]
  savedCourses  UserSavedCourse[]
  refreshTokens RefreshToken[]
  expenses      Expense[]

  @@map("users")
}

model Interest {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(100)
  slug      String   @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  userInterests UserInterest[]

  @@map("interests")
}

model UserInterest {
  id         Int      @id @default(autoincrement())
  userId     String   @map("user_id")
  interestId Int      @map("interest_id")
  createdAt  DateTime @default(now()) @map("created_at")

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  interest Interest @relation(fields: [interestId], references: [id], onDelete: Cascade)

  @@unique([userId, interestId])
  @@index([userId])
  @@index([interestId])
  @@map("user_interests")
}

model Course {
  id           String   @id @default(uuid())
  title        String
  providerName String   @map("provider_name") @db.VarChar(50)
  providerSlug String   @map("provider_slug") @db.VarChar(50)
  url          String
  price        Decimal? @db.Decimal(10, 2)
  currency     String?  @db.VarChar(5)
  rating       Decimal? @db.Decimal(3, 2)
  duration     String?  @db.VarChar(50)
  categories   Json?    @db.Json
  thumbnailUrl String?  @map("thumbnail_url")
  description  String?  @db.Text
  sourceHash   String   @unique @map("source_hash") @db.VarChar(64)
  scrapedAt    DateTime @default(now()) @map("scraped_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  savedByUsers UserSavedCourse[]

  @@index([providerSlug])
  @@index([price])
  @@index([rating])
  @@map("courses")
}

model UserSavedCourse {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  courseId  String   @map("course_id")
  addedAt   DateTime @default(now()) @map("added_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@map("user_saved_courses")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique @db.VarChar(500)
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model Expense {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  category    String   @db.VarChar(50)  // e.g., "Food & Drinks", "Entertainment", "Shopping", "Transport"
  itemName    String   @map("item_name") @db.VarChar(100)  // e.g., "Burger", "Movie Ticket", "Coffee"
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("INR") @db.VarChar(5)
  description String?  @db.Text
  spentAt     DateTime @default(now()) @map("spent_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
  @@index([spentAt])
  @@map("expenses")
}
